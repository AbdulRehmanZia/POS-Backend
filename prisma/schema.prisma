model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id            Int        @id @default(autoincrement())
  name          String
  price         Float
  costPrice     Float
  stockQuantity Int
  unit          String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  categoryId    Int
  category      Category   @relation(fields: [categoryId], references: [id])
  SaleItem      SaleItem[]
}

